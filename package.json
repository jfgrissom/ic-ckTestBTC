{
  "name": "ic-cktestbtc-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dfx": "dfx start --clean",
    "dfx:build": "./scripts/build-backend.sh",
    "dfx:deploy": "./scripts/deploy-backend.sh",
    "dfx:deploy:all": "dfx deploy",
    "dfx:generate": "./scripts/generate-declarations.sh",
    "dfx:stop": "dfx stop",
    "dev:setup": "dfx start --clean && ./scripts/deploy-backend.sh && npm run dev",
    "predev": "npm run dfx:deploy",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "generate": "echo '⚠️  Use npm run dfx:generate instead (fixes DFX bug)' && ./scripts/generate-declarations.sh",
    "update:env": "./scripts/update-env.sh",
    "lint:rust": "cargo clippy --manifest-path src/backend/Cargo.toml --target wasm32-unknown-unknown -- -D warnings",
    "format:rust": "cargo fmt --manifest-path src/backend/Cargo.toml"
  },
  "dependencies": {
    "@dfinity/agent": "^0.20.2",
    "@dfinity/auth-client": "^0.20.2",
    "@dfinity/candid": "^0.20.2",
    "@dfinity/principal": "^0.20.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-environment": "^1.1.3"
  }
}
