{
  "name": "ic-cktestbtc-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dfx": "dfx start --clean",
    "dfx:create": "./scripts/setup-canisters.sh",
    "dfx:build": "./scripts/build-backend.sh",
    "dfx:deploy": "./scripts/deploy-backend.sh",
    "dfx:deploy:all": "dfx deploy",
    "dfx:generate": "./scripts/generate-declarations.sh",
    "dfx:stop": "dfx stop",
    "dfx:setup": "npm run dfx:create && npm run update:env && npm run dfx:deploy",
    "deploy": "./scripts/deploy-backend.sh",
    "deploy:local": "./scripts/deploy-backend.sh",
    "deploy:ic": "./scripts/deploy-production.sh",
    "predev": "npm run dfx:setup",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "generate": "echo '⚠️  Use npm run dfx:generate instead (fixes DFX bug)' && ./scripts/generate-declarations.sh",
    "update:env": "./scripts/update-env.sh",
    "type-check": "npx tsc --noEmit --project tsconfig.check.json",
    "type-check:strict": "npx tsc --noEmit --project tsconfig.strict.json",
    "lint:rust": "cargo clippy --manifest-path src/backend/Cargo.toml --target wasm32-unknown-unknown -- -D warnings",
    "format:rust": "cargo fmt --manifest-path src/backend/Cargo.toml"
  },
  "dependencies": {
    "@connect2ic/core": "^0.2.0-beta.24",
    "@connect2ic/react": "^0.2.0-beta.24",
    "@dfinity/agent": "^0.20.2",
    "@dfinity/candid": "^0.20.2",
    "@dfinity/principal": "^0.20.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.13",
    "@types/validator": "^13.15.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.19.14",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^3.2.4"
  }
}
